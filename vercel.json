{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "ROLLUP_SKIP_NODEJS_NATIVE=true npm run build",
  "installCommand": "npm install --no-package-lock",
  "framework": null,
  "functions": {
    "api/review.ts": {
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "api/**"
    }
  },
  "rewrites": [
    { "source": "/((?!api|.*\\..*).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|avif)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(woff|woff2|ttf|otf)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" },
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "Content-Disposition", "value": "inline" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [ { "type": "host", "value": "vertex-ai-rho.vercel.app" } ],
      "destination": "https://www.vertexed.app/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [ { "type": "host", "value": "vertexed.app" } ],
      "destination": "https://www.vertexed.app/:path*",
      "permanent": true
    }
  ]
}
